@model Bicycle

<div class="row mb-5">
    <h3>Добавить велосипед</h3>
    <form asp-action="Create" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="name"></label>

            <div class="col-12">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="shortDesc"></label>

            <div class="col-12">
                <input asp-for="shortDesc" class="form-control" />
                <span asp-validation-for="shortDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="count"></label>

            <div class="col-12">
                <input asp-for="count" class="form-control" />
                <span asp-validation-for="count" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="price"></label>

            <div class="col-12">
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="firm"></label>

            <div class="col-12">
                <input asp-for="firm" class="form-control" />
                <span asp-validation-for="firm" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="categoryId"></label>

            <div class="col-12">

                <select asp-for="categoryId" asp-items="@Model.listOfType"></select>
                <span asp-validation-for="categoryId" class="text-danger"></span>

            </div>
        </div>

<input class="btn btn-success mt-5 " type="submit" value="Завершить заказ" />
    </form>

</div>