
@model Bicycle

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->


<form asp-action="Index" method="post" class="form-horizontal">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="name"></label>

                        <div class="col-12">
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="shortDesc"></label>

                        <div class="col-12">
                            <input asp-for="shortDesc" class="form-control" />
                            <span asp-validation-for="shortDesc" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="count"></label>

                        <div class="col-12">
                            <input asp-for="count" class="form-control" />
                            <span asp-validation-for="count" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="price"></label>

                        <div class="col-12">
                            <input asp-for="price" class="form-control" />
                            <span asp-validation-for="price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="firm"></label>

                        <div class="col-12">
                            <input asp-for="firm" class="form-control" />
                            <span asp-validation-for="firm" class="text-danger"></span>
                        </div>
                    </div>
            
                    <div class="form-group">
                        <label asp-for="categoryId"></label>

                        <div class="col-12">

                            <select asp-for="categoryId" asp-items="@Model.listOfType"></select>
                            <span asp-validation-for="categoryId" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input class="btn btn-success mt-5 " type="submit" value="Сохранить" />
                </div>
            </div>
        </div>
    </div>
</form>